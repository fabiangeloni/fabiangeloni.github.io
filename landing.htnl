    <style>
        /* Variables y Reset Básico */
        :root {
            --color-primary: #1e40af; /* Azul oscuro */
            --color-secondary: #fcd34d; /* Amarillo/Dorado */
            --color-text: #333;
            --color-bg-light: #f9fafb; /* Gris muy claro */
        }
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #fff;
            color: var(--color-text);
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }
        h2 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: var(--color-primary);
        }
        .section-padding {
            padding: 4rem 0;
        }

        /* 1. Estilo Hero */
        .hero {
            position: relative;
            height: 60vh;
            display: flex;
            align-items: center;
            justify-content: flex-start;
            color: white;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
            background-size: cover;
            background-position: center;
        }
        .hero-content {
            padding: 0 2rem;
            max-width: 600px;
            z-index: 10;
        }
        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.4); /* Overlay oscuro para legibilidad */
        }

        /* 2. Horizontal Scroll y Cards */
        .horizontal-scroll {
            display: flex;
            overflow-x: auto; /* Permite el scroll horizontal */
            gap: 1.5rem; /* Espacio entre tarjetas */
            padding-bottom: 1rem; /* Espacio para la barra de scroll */
            /* Ocultar barra de desplazamiento */
            -webkit-overflow-scrolling: touch;
            scrollbar-width: none; /* Firefox */
        }
        .horizontal-scroll::-webkit-scrollbar {
            display: none; /* Chrome, Safari, Opera */
        }

        .card {
            flex-shrink: 0; /* Evita que las tarjetas se encojan */
            width: 280px; /* Ancho fijo para cada tarjeta */
            background-color: white;
            border-radius: 0.75rem;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border: 1px solid #eee;
            transition: transform 0.2s;
            display: flex;
            flex-direction: column;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        }
        .card-img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }
        .card-body {
            padding: 1rem;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }
        .card-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-top: 0;
            margin-bottom: 0.5rem;
        }
        .card-category {
            font-size: 0.8rem;
            color: var(--color-primary);
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        .card-btn {
            display: block;
            width: 100%;
            margin-top: auto; /* Empuja el botón hacia abajo */
            padding: 0.5rem;
            background-color: var(--color-primary);
            color: white;
            text-align: center;
            text-decoration: none;
            border-radius: 0.5rem;
            font-weight: 600;
            transition: background-color 0.2s;
        }
        
        /* 3. Separator / CTA Banner */
        .separator-banner {
            background-color: var(--color-secondary);
            color: var(--color-primary);
            padding: 1.5rem 0;
            text-align: center;
            font-size: 1.2rem;
            font-weight: 600;
            margin: 4rem 0;
        }
        
        /* 4. Final CTA */
        .final-cta {
            background-color: var(--color-primary);
            color: white;
            text-align: center;
            padding: 4rem 2rem;
            border-radius: 0.75rem;
            margin-bottom: 4rem;
        }
        .final-cta h3 {
            font-size: 2.5rem;
            margin-top: 0;
            margin-bottom: 1rem;
        }
        .cta-btn-secondary {
            display: inline-block;
            padding: 0.75rem 2rem;
            background-color: var(--color-secondary);
            color: var(--color-primary);
            text-decoration: none;
            border-radius: 0.5rem;
            font-size: 1.2rem;
            font-weight: 700;
            transition: opacity 0.2s;
        }
    </style>
